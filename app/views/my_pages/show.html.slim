.ui.middle.aligned.center.aligned.grid
  .column
    = simple_form_for(current_user, url: {action: :update}, html: {class: "ui large form", id: "color-form"}) do |f|
      .field
        = render "colors"
        = f.input :color, as: :hidden, error: false, input_html: {"v-model" => "color"}
      .field
        = f.input :sound, error: false, label: false, include_blank: false

      button.ui.fluid.huge.teal.submit.button(type="submit")
        = I18n.t(:update)
    - if current_user.errors.present?
      .ui.error.message
        - current_user.errors.full_messages.each do |error|
          p = error
